<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../Interface.xsd">
  <Windows>
    <Window name="OpenUI.Window.CheckLabel">
      <Size>
        <AbsPoint x="32" y="32" />
      </Size>
      <Windows>
        <Button name="$parent.Button" inherits="OpenUI.Button.Check">
          <Anchors>
            <Anchor point="left" relativePoint="left">
              <AbsPoint x="5" y="0"/>
            </Anchor>
          </Anchors>
        </Button>
        <Label name="$parent.Label" font="UO_DefaultText">
          <Size>
            <AbsPoint x="300" y="16" />
          </Size>
          <Anchors>
            <Anchor point="right" relativePoint="left" relativeTo="$parent.Button">
              <AbsPoint x="5" y="0" />
            </Anchor>
          </Anchors>
          <Color r="255" g="255" b="255" a="255" />
        </Label>
      </Windows>
    </Window>
    
    <Window name="OpenUI.Window.CheckLabel.Small">
      <Size>
        <AbsPoint x="120" y="12" />
      </Size>
      <Windows>
        <Button name="$parent.Button" inherits="OpenUI.Button.Check.Small">
          <Anchors>
            <Anchor point="left" relativePoint="left" />
          </Anchors>
        </Button>
        <Label name="$parent.Label" 
            font="UO_DefaultText_12pt"
            autoresize="true">
          <Anchors>
            <Anchor point="topleft" relativePoint="topleft">
              <AbsPoint x="15" y="1" />
            </Anchor>
            <Anchor point="bottomright" relativePoint="bottomright" />
          </Anchors>
          <Color r="255" g="255" b="255" a="255" />
        </Label>
      </Windows>
    </Window>
  </Windows>
</Interface>